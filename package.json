{
  "name": "shortcuts-scanner",
  "version": "1.0.0",
  "description": "Chrome extension to view, inspect, download and scan Apple Shortcuts from iCloud.com",
  "type": "module",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run lint && npm run type-check && npm run check && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "biome lint ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format ./src",
    "format:fix": "biome format --write ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src",
    "fix": "npm run lint:fix && npm run format:fix && npm run check:fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@plist/parse": "^1.1.0",
    "framer-motion": "^11.0.28",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@crxjs/vite-plugin": "^2.3.0",
    "@faker-js/faker": "^9.9.0",
    "@peculiar/webcrypto": "^1.5.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "happy-dom": "^15.11.7",
    "msw": "^2.12.7",
    "typescript": "^5.4.5",
    "vite": "^7.3.0",
    "vitest": "^2.1.9"
  }
}
